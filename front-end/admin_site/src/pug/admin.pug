doctype html
html(lang="ko")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title admin
        link(rel="stylesheet", href="./css/admin.css")
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+KR:wght@500&display=swap" rel="stylesheet">
        script( src="http://code.jquery.com/jquery-latest.min.js")
    body
        section
            article 
                div 유저 테이블
                div.userTable
                    div
                        div
                            p 유저 닉네임
                            p 유저 이메일
                            p 가입일
                            p 권한
                    div.tableBox
            article 
                div 게임 테이블
                div.gameTable 
                    div
                        div
                            p 게임 이름
                            p 게임 태그
                            p 등록일
                            p view
                            button#addGameButton 추가
                    div.tableBox
            div#gameAddBox
                div.gameNameBox
                    p 이름
                    input(type="text")
                div.gameEnglishNameBox
                    p 영문 이름
                    input(type="text")
                div.gameTagBox
                    p 태그
                    input(type="text")
                div.gameDescriptionBox
                    p 설명
                    textarea
                div.gameButtonBox
                    button.gameCancelButton 취소
                    button#gameCreateButton 저장

            div#gameEditBox(data-id)
                div.gameNameBox
                    p 이름
                    input(type="text")
                div.gameEnglishNameBox
                    p 영문 이름
                    input(type="text")
                div.gameTagBox
                    p 태그
                    input(type="text")
                div.gameDescriptionBox
                    p 설명
                    textarea
                div.gameButtonBox
                    button.gameCancelButton 취소
                    button#gameEditButton 저장

            div#descriptionBox
                div#gameDescription
                div
                    button 확인
    script(src="./js/admin.js") 